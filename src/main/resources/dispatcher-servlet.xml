<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <description>mvc相关容器,配置</description>

    <!-- 自动扫描配有spring注解的包,只扫描Controller层包,不需在配置context:annotation-config -->
    <context:component-scan base-package="org.gscheduler.web" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <!-- 静态资源（js、image）访问配置,静态资源转给tomcat默认容器处理 -->
    <mvc:default-servlet-handler/>

    <!-- 开启注解mvc层的注解 -->
    <mvc:annotation-driven/>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/task/**"/>
            <bean class="org.gscheduler.web.filter.OpInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!-- 视图解析器ViewResolver，用于支持servlet，jsp视图解析-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <!-- 定义所需访问的文件路径前缀-->
        <property name="prefix" value="/WEB-INF/pages/"/>
        <!-- 表示要访问的文件的后缀-->
        <property name="suffix" value=".jsp"/>
    </bean>

</beans>